PROGNAME = 'gwget'
APPNAME = 'hu.uucp.gwget'

if any(flag in sys.argv for flag in ['-h', '--help']):
	print """Usage: %s [gwget options] [wget options] [URLs...]
%s options:
  --proxy-url URL
  --cookies NAME=VALUE[;NAME=VALUE[;...]]
  --cwd-prefix
  --rename-to FILENAME
  --run-on-complete COMMAND""" % (PROGNAME, PROGNAME)
	raise SystemExit(0)


